@model Turbo_Wheels.Models.Reservation

@{
    ViewBag.Title = "Reservation details";
}

<style>
    .reservation-details-card {
        max-width: 480px;
        width: 100%;
        background: white;
        border-radius: 12px;
        box-shadow: 0 6px 18px rgba(21, 24, 30, 0.08);
        padding: 1.5rem;
    }

    img {
        max-height: 300px;
    }

    .detail-row {
        display: flex;
        padding: 0.4rem 0;
        border-bottom: 1px solid #eee;
    }

    .detail-row:last-child {
        border-bottom: none;
    }

    .detail-row strong {
        flex: 0 0 140px;
        font-weight: 600;
    }

    .detail-row span {
        flex: 1;
        text-align: right;
        }
</style>

<div class="d-flex justify-content-center align-items-center bg-light px-3 py-4">
    <div class="d-flex bg-white rounded shadow reservation-details-card">
        <div class="p-4 w-100">
            <h2 class="text-center mb-4">Reservation details</h2>

            <div class="detail-row">
                <strong>Name and surname</strong>
                <span>@(Model.User.FirstName + " " + Model.User.LastName)</span>
            </div>

            <div class="detail-row">
                <strong>Vehicle</strong>
                <span>@(Model.Vehicle.Brand + " " + Model.Vehicle.Model)</span>
            </div>

            <div class="detail-row">
                <img src="@Url.Content("~/images/vehicle_images/" + Model.Vehicle.ImageURL)"
                     class="img-fluid rounded" />
            </div>

            <div class="detail-row">
                <strong>Pickup date and time</strong>
                <span>@Model.PickupDateTime.ToString("g")</span>
            </div>

            <div class="detail-row">
                <strong>Pickup place</strong>
                <span>@Model.PickupPlace</span>
            </div>

            <div class="detail-row">
                <strong>Return date and time</strong>
                <span>@Model.ReturnDateTime.ToString("g")</span>
            </div>

            <div class="detail-row">
                <strong>Return place</strong>
                <span>@Model.ReturnPlace</span>
            </div>

            <div class="detail-row">
                <strong>Total price</strong>
                <span>@Model.TotalPrice.ToString("N2") MKD</span>
            </div>

            <div class="detail-row">
                <strong>Credit card owner</strong>
                <span>@Model.CreditCardOwner</span>
            </div>

            <div class="detail-row">
                <strong>Last 4 digits of the credit card</strong>
                <span>****@Model.CreditCardLast4</span>
            </div>

            <div class="detail-row">
                <strong>Credit card expiration date</strong>
                <span>@Model.CreditCardExpiryDate</span>
            </div>

            <div class="d-flex justify-content-end mt-4">
                <a href="@Url.Action("Index", "Reservations")" class="btn btn-secondary">Back</a>
            </div>
        </div>
    </div>
</div>