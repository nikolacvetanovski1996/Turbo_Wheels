@{
    var isAdminCookie = Request.Cookies["isAdmin"];
    var nameCookie = Request.Cookies["nameSurname"];

    bool isAdmin = false;
    string nameSurname = "";

    if (isAdminCookie != null)
    {
        bool.TryParse(isAdminCookie.Value, out isAdmin);
    }

    if (nameCookie != null)
    {
        nameSurname = nameCookie.Value;
    }
}

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewBag.Title</title>
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/bundles/jqueryui")

        <link href="~/Content/font-awesome.min.css" rel="stylesheet" />

        <style>
            .navbar-dark .navbar-brand {
                color: rgba(255, 255, 255, 0.55);
            }

                .navbar-dark .navbar-brand:hover {
                    color: rgba(255, 255, 255, 0.75);
                }

            @@media (min-width: 577px) {
                .nav-item-logout-mobile {
                    display: none;
                }
            }

            @@media (max-width: 576px) {
                .navbar-nav .nav-item {
                    margin: 0 auto;
                }

                .footer-links-column {
                    margin-bottom: 25px;
                }

                    .footer-links-column:last-child {
                        margin-bottom: 0;
                    }
            }

            iframe {
                width: 100%;
                height: 230px;
                border: 0;
            }

            .pr-10 {
                padding-right: 10px;
            }

            .section-title {
                font-size: 24px;
            }

            .full-width {
                width: 100%;
            }
        </style>
    </head>

    <body class="bg-light">

        <nav class="navbar navbar-expand-sm navbar-dark bg-dark sticky-top">
            <div class="container-fluid">

                <!-- BRAND (hidden on mobile, shown inside menu instead) -->
                <a class="navbar-brand d-none d-sm-flex align-items-center" href="~/Home/Index">
                    <img src="~/images/logo.png" class="me-2" />
                    TURBO WHEELS &reg;
                </a>

                <!-- HAMBURGER -->
                <button class="navbar-toggler ms-auto" type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- COLLAPSE -->
                <div class="collapse navbar-collapse text-center" id="mainNavbar">

                    <ul class="navbar-nav">

                        <!-- BRAND INSIDE MENU (mobile only) -->
                        <li class="nav-item d-sm-none mt-2">
                            <a class="nav-link fw-bold" href="~/Home/Index">
                                <img src="~/images/logo.png" class="me-2" />
                                TURBO WHEELS &reg;
                            </a>
                        </li>

                        @if (isAdmin)
                        {
                            <li class="nav-item"><a class="nav-link" href="~/Users/Index">Users</a></li>
                            <li class="nav-item"><a class="nav-link" href="~/Vehicles/Index">Vehicles</a></li>
                            <li class="nav-item"><a class="nav-link" href="~/Reservations/Index">Reservations</a></li>
                        }
                        else
                        {
                            <li class="nav-item"><a class="nav-link" href="~/Home/Index">Home</a></li>
                            <li class="nav-item"><a class="nav-link" href="~/Home/About">About Us</a></li>
                        }

                        <!-- LOGOUT (mobile only) -->
                        <li class="nav-item nav-item-logout-mobile">
                            <a class="nav-link" href="@Url.Action("Logout", "Home")">Log out</a>
                        </li>
                    </ul>

                    <!-- USER MENU (desktop only) -->
                    <ul class="navbar-nav ms-auto d-none d-sm-flex">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#"
                               id="userDropdown"
                               role="button"
                               data-bs-toggle="dropdown"
                               aria-expanded="false">
                                Hello @nameSurname
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("Logout", "Home")">
                                        Log out
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>

                </div>
            </div>
        </nav>

        <div class="d-flex flex-column">
            <main>
                @RenderBody()
                <hr class="hr-main" />
            </main>
        </div>

        <div class="container">
            <div class="row">
                <div class="footer-links-column col-12 col-md-5 pr-10">
                    <div class="section-title">
                        TURBO WHEELS Rent A Car
                        <hr />
                    </div>
                    <i class="fa fa-phone"></i>
                    <a href="tel:+389-23-796-496">+389 2 3796 496</a> - Skopje Airport
                    <br />
                    <i class="fa fa-phone"></i>
                    <a href="tel:+389-23-197-773">+389 2 3197 773</a> - Karposh 2 Office
                    <br />
                    <i class="fa fa-phone"></i>
                    <a href="tel:+389-22-110-740">+389 2 2110 740</a> - Kisela Voda Office
                    <br />
                    <i class="fa fa-phone"></i>
                    <a href="tel:+389-70-527-345">+389 70 527 345</a> - 24/7 Call Service
                    <br />
                    <i class="fa fa-phone"></i>
                    <a href="tel:+389-77-653-258">+389 77 653 258</a> - Turbo Wheels CEO
                    <br />
                    <i class="fa fa-envelope"></i>
                    <a href="mailto:rentacar@turbowheels.com.mk">rentacar@turbowheels.com.mk</a>
                </div>
                <div class="footer-links-column col-12 col-md-3 pr-10">
                    <div class="section-title">
                        Site Links
                        <hr />
                    </div>
                    @if (isAdmin)
                    {
                        <span>&gt;</span> <a href="~/Users/Index">Users</a> <br />
                        <span>&gt;</span> <a href="~/Vehicles/Index">Vehicles</a> <br />
                        <span>&gt;</span> <a href="~/Reservations/Index">Reservations</a> <br />
                    }
                    else {  
                        <span>&gt;</span> <a href="~/Home/Index">Home</a> <br />
                        <span>&gt;</span> <a href="~/Home/About">About Us</a> <br />
                    }
                </div>
                <div class="footer-links-column col-12 col-md-4">
                    <div class="full-width">
                        <iframe src="https://maps.google.com/maps?width=100%&amp;height=230&amp;hl=en&amp;q=Airport%20Skopje+(TurboWheels)&amp;ie=UTF8&amp;t=&amp;z=10&amp;iwloc=A&amp;output=embed"
                                title="Turbo Wheels - Skopje Airport location" loading="lazy" referrerpolicy="no-referrer-when-downgrade" frameborder="0" scrolling="no" marginheight="0" marginwidth="0">
                            <a href="https://www.maps.ie/create-google-map/">
                                Google Maps iframe generator
                            </a>
                        </iframe>
                    </div>
                </div>
            </div>
        </div>

        <hr />

        <footer class="text-center">
            <p>TURBO WHEELS &copy; @DateTime.Now.Year</p>
        </footer>

        @RenderSection("scripts", required: false)

    </body>
</html>
