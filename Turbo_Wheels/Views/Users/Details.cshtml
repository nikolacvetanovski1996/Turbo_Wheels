@model Turbo_Wheels.Models.User

@{
    ViewBag.Title = "User details";
}

<style>
    .user-details-card {
        max-width: 480px;
        width: 100%;
        background: white;
        border-radius: 12px;
        box-shadow: 0 6px 18px rgba(21, 24, 30, 0.08);
        padding: 1.5rem;
    }

    .detail-row {
        display: flex;
        padding: 0.4rem 0;
        border-bottom: 1px solid #eee;
    }

    .detail-row:last-child {
        border-bottom: none;
    }

    .detail-row strong {
        flex: 0 0 140px;
        font-weight: 600;
    }

    .detail-row span {
        flex: 1;
        text-align: right;
    }
</style>

<div class="d-flex justify-content-center align-items-center bg-light px-3 py-4">
    <div class="d-flex bg-white rounded shadow user-details-card">
        <div class="p-4 w-100">
            <h2 class="text-center mb-4">User details</h2>

            <div class="detail-row">
                <strong>Username</strong>
                <span>@Model.Username</span>
            </div>

            <div class="detail-row">
                <strong>Admin</strong>
                <span>
                    <i class="fa @(Model.IsAdmin ? "fa fa-check text-success fa-lg" : "fa fa-times text-secondary fa-lg")"></i>
                </span>
            </div>

            <div class="detail-row">
                <strong>First Name</strong>
                <span>@Model.FirstName</span>
            </div>

            <div class="detail-row">
                <strong>Last Name</strong>
                <span>@Model.LastName</span>
            </div>

            <div class="detail-row">
                <strong>Email</strong>
                <span>
                    <a href="mailto:@Model.Email">@Model.Email</a>
                </span>
            </div>

            <div class="detail-row">
                <strong>Address</strong>
                <span>@Model.Address</span>
            </div>

            <div class="detail-row">
                <strong>Phone</strong>
                <span>
                    @if (!string.IsNullOrWhiteSpace(@Model.Phone))
                    {
                        <a href="tel:@Model.Phone">@Model.Phone</a>
                    }   
                </span>
            </div>

            <div class="d-flex justify-content-end mt-4">
                <a href="@Url.Action("Index", "Users")" class="btn btn-secondary">Back</a>
            </div>
        </div>
    </div>
</div>